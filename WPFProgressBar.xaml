<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNoTitle"
        Title="MainWindow" Height="122" Width="400" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".75*"/>
            <RowDefinition Height=".25*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Top" Width="Auto" Grid.Row="0">
            <TextBlock x:Name="sbItem" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="Auto" Height="Auto" Text="Starting" Margin="5,20"/>
            <ProgressBar x:Name="pb" Height="10" VerticalAlignment="Center" Margin="5,10,0,0"/>
        </StackPanel>
        <Button x:Name="btnCancel" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" Content="Cancel" Grid.Row="1"/>
    </Grid>
</Window>
